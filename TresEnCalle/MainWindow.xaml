<Window x:Class="TresEnCalle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TresEnCalle"
        mc:Ignorable="d"
        Title="Tres en Línea" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="633*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Tres en Línea" Margin="0,0,0,20"/>
            <Button Content="Nuevo Juego" Width="150" Height="40" Margin="0,0,0,10"/>
            <Button Content="Jugar con Computadora" Width="150" Height="40" Margin="0,0,0,10"/>
            <Button Content="Salir" Width="150" Height="40"/>
        </StackPanel>

        <!-- Game Grid -->
        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tic-Tac-Toe Buttons (Grid) -->
            <Button Name="Button1" Grid.Row="0" Grid.Column="0" Width="100" Height="100" Click="Button_Click"/>
            <Button Name="Button2" Grid.Row="0" Grid.Column="1" Width="100" Height="100" Click="Button_Click"/>
            <Button Name="Button3" Grid.Row="0" Grid.Column="2" Width="100" Height="100" Click="Button_Click"/>

            <Button Name="Button4" Grid.Row="1" Grid.Column="0" Width="100" Height="100" Click="Button_Click"/>
            <Button Name="Button5" Grid.Row="1" Grid.Column="1" Width="100" Height="100" Click="Button_Click"/>
            <Button Name="Button6" Grid.Row="1" Grid.Column="2" Width="100" Height="100" Click="Button_Click"/>

            <Button Name="Button7" Grid.Row="2" Grid.Column="0" Width="100" Height="100" Click="Button_Click"/>
            <Button Name="Button8" Grid.Row="2" Grid.Column="1" Width="100" Height="100" Click="Button_Click"/>
            <Button Name="Button9" Grid.Row="2" Grid.Column="2" Width="100" Height="100" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
