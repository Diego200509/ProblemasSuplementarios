<Window x:Class="MagicSquare8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicSquare8"
        mc:Ignorable="d"
        Title="Cuadrado Mágico 5/7" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
            <RowDefinition Height="*"/>
            <!-- Cuadrícula -->
            <RowDefinition Height="Auto"/>
            <!-- Resultados -->
        </Grid.RowDefinitions>

        <!-- 1) Botón de generación -->
        <Button Grid.Row="0"
                Name="GenerateButton"
                Content="Generar Cuadrado Mágico"
                Padding="8"
                Margin="0,0,0,10"
                Click="GenerateButton_Click"/>

        <!-- 2) UniformGrid 4×4 -->
        <UniformGrid Grid.Row="1"
                     Name="MagicGrid"
                     Rows="4" Columns="4"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"/>

        <!-- 3) TextBlock para mostrar las sumas -->
        <ScrollViewer Grid.Row="2"
                      Margin="0,10,0,0"
                      Height="120"
                      VerticalScrollBarVisibility="Auto">
            <TextBlock Name="SumResultsText"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
